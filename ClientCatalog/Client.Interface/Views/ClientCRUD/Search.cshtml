@model IEnumerable<Client.Interface.Models.ClientClass>
@{
    ViewData["Title"] = "Search for a client.";
}

<h1 style="color:midnightblue";>@ViewData["Title"]</h1>

<form method="get" asp-action="Search">
    <div class="form-group">
        <br /> <br />
        <label for="searchQuery">Please enter the client ID:</label>
        <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Enter the ID of the desired client." />
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Email</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="ClientCRUD" asp-action="Update" asp-route-id="@client.Id">Modifier</a>
                        <a class="btn btn-danger btn-sm" asp-controller="ClientCRUD" asp-action="Delete" asp-route-id="@client.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <br />
    <br />


    <p>Aucun client trouvé.</p>
}
